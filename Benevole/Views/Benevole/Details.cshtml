@using Benevole.Models
@model BenevoleModel

@{
    ViewData["Title"] = "Details ";
}

<h1>Détails du Bénévole</h1>

<div>
    <h4>Bénévole</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nom
        </dt>
        <dd class="col-sm-10">
            @Model.Nom
        </dd>
        <dt class="col-sm-2">
            Prénom
        </dt>
        <dd class="col-sm-10">
            @Model.Prenom
        </dd>
        <dt class="col-sm-2">
            Téléphone
        </dt>
        <dd class="col-sm-10">
            @Model.Telephone
        </dd>
        <dt class="col-sm-2">
            Courriel
        </dt>
        <dd class="col-sm-10">
            @Model.Courriel
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Retour a la liste</a>
</div>